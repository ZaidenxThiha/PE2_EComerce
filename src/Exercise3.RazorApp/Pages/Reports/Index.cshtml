@page
@model Exercise3.RazorApp.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<h1>Reports</h1>
<form method="post" class="row g-3">
    <div class="col-md-3">
        <label asp-for="Month" class="form-label"></label>
        <input asp-for="Month" class="form-control" />
    </div>
    <div class="col-md-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary">Load</button>
    </div>
</form>

<h2 class="mt-4">Orders</h2>
<table class="table">
    <thead>
    <tr>
        <th>Order</th>
        <th>Date</th>
        <th>Agent</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.OrderDate.ToShortDateString()</td>
            <td>@order.AgentName</td>
            <td>@order.TotalAmount.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>

<h2>Top Items</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Revenue</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.ItemName</td>
            <td>@item.QuantitySold</td>
            <td>@item.Revenue.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>

<h2>Top Agents</h2>
<table class="table">
    <thead>
    <tr>
        <th>Agent</th>
        <th>Items Purchased</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var agent in Model.Agents)
    {
        <tr>
            <td>@agent.AgentName</td>
            <td>@agent.ItemsPurchased</td>
            <td>@agent.TotalAmount.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>
