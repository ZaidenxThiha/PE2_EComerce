@page
@model Exercise3.RazorApp.Pages.Agents.IndexModel
@{
    ViewData["Title"] = "Agents";
}

<h1>Agents</h1>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var agent in Model.Agents)
    {
        <tr>
            <td>@agent.AgentName</td>
            <td>@agent.Address</td>
            <td>@agent.Phone</td>
            <td>@agent.Email</td>
        </tr>
    }
    </tbody>
</table>

<h2>Add / Update Agent</h2>
<form method="post" class="row g-3">
    <input type="hidden" asp-for="Input.AgentId" />
    <div class="col-md-6">
        <label asp-for="Input.AgentName" class="form-label"></label>
        <input asp-for="Input.AgentName" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Input.Phone" class="form-label"></label>
        <input asp-for="Input.Phone" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="Input.Address" class="form-label"></label>
        <input asp-for="Input.Address" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Save</button>
    </div>
</form>
